{% include('header.twig') %}
<div class="container">
    <h1 class="text-center mb-4 title-color">Add Dorama</h1>
    <form method="POST" action="/addNewDorama">
        <div class="form-group">
            <label>Enter Name</label>
            <input type="text" name="Dorama[name]"class="form-control" placeholder="Name" required >
        </div>
        <div class="form-group">
            <label>Enter Original Name</label>
            <input type="text" name="Dorama[original-name]" class="form-control" placeholder="Original Name" required >
        </div>
        <div class="form-group">
            <label>Select Country</label>
            <select  name="Dorama[country]" class="form-control">
                {% for value in country %}
                    <option value="{{ value.id_country }}">{{ value.country_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Select Channel</label>
            <select  name="Dorama[channel]" class="form-control">
                {% for value in channel %}
                    <option value="{{ value.id_channel }}">{{ value.—Åhannel_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Enter Series Count</label>
            <input type="number" name="Dorama[series-count]" class="form-control" placeholder="Series Count" required >
        </div>
        <div class="form-group">
            <label>Enter Series Duration</label>
            <input type="number" name="Dorama[series-duration]" class="form-control" placeholder="Series Duration" required >
        </div>
        <div class="form-group">
            <label>Select Status</label>
            <select  name="Dorama[status]" class="form-control">
                {% for value in statust %}
                    <option value="{{ value.id_status }}">{{ value.status_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Select Producer</label>
            <select  name="Dorama[producer]" class="form-control">
                {% for value in producer %}
                    <option value="{{ value.id_producer }}">{{ value.producer_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Select Genre</label>
            <select  name="Dorama[genre]" class="form-control">
                {% for value in genre %}
                    <option value="{{ value.id_genre }}">{{ value.genre_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Enter Issue Year</label>
            <input type="number" name="Dorama[issue-year]" class="form-control" placeholder="Issue Year" required >
        </div>
        <button type="submit" class="btn btn-dorama mb-5">Add New Dorama</button>
    </form>
</div>
{% include('footer.twig') %}