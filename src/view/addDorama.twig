{% include('header.twig') %}
<div class="container">
    <h1 class="text-center mb-4 title-color">Добавить Дораму</h1>
    <form method="POST" action="/addNewDorama">
        <div class="form-group">
            <label>Введите Название</label>
            <input type="text" name="Dorama[name]"class="form-control" placeholder="Название" required >
        </div>
        <div class="form-group">
            <label>Введите Оригинальное Название</label>
            <input type="text" name="Dorama[original-name]" class="form-control" placeholder="Оригинальное название" required >
        </div>
        <div class="form-group">
            <label>Выберите Страну</label>
            <select  name="Dorama[country]" class="form-control">
                {% for value in country %}
                    <option value="{{ value.id_country }}">{{ value.country_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Выберите Телеканал</label>
            <select  name="Dorama[channel]" class="form-control">
                {% for value in channel %}
                    <option value="{{ value.id_channel }}">{{ value.сhannel_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Введите Количество Серий</label>
            <input type="number" name="Dorama[series-count]" class="form-control" placeholder="Количество серий" required >
        </div>
        <div class="form-group">
            <label>Введите Продолжительность Серии</label>
            <input type="number" name="Dorama[series-duration]" class="form-control" placeholder="Продолжительность серии" required >
        </div>
        <div class="form-group">
            <label>Выберите Статус</label>
            <select  name="Dorama[status]" class="form-control">
                {% for value in statust %}
                    <option value="{{ value.id_status }}">{{ value.status_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Выберите Режисёра</label>
            <select  name="Dorama[producer]" class="form-control">
                {% for value in producer %}
                    <option value="{{ value.id_producer }}">{{ value.producer_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Выберите Жанр</label>
            <select  name="Dorama[genre]" class="form-control">
                {% for value in genre %}
                    <option value="{{ value.id_genre }}">{{ value.genre_name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Введите Год Выпуска</label>
            <input type="number" name="Dorama[issue-year]" class="form-control" placeholder="Год выпуска" required >
        </div>
        <button type="submit" class="btn btn-dorama mb-5">Добавить Дораму</button>
    </form>
</div>
{% include('footer.twig') %}