{% include('header.twig') %}
<div class="container">
    <h1 class="text-center mb-4 title-color">Редактировать Дораму</h1>
    <form method="POST" action="/editNewDorama">
        <div class="form-group">
            <label>Введите Название</label>
            <input type="text" name="Dorama[name]"class="form-control" placeholder="Название" value="{{ data.dorama_name }}" required >
        </div>
        <div class="form-group">
            <label>Введите Оригинальное Название</label>
            <input type="text" name="Dorama[original-name]" class="form-control" placeholder="Оригинальное название" value="{{ data.dorama_original_name }}" required >
        </div>
        <div class="form-group">
            <label>Выберите Страну</label>
            <select  name="Dorama[country]" class="form-control">
                {% for value in country %}
                    {% if value.id_country == data.id_country %}
                        <option value="{{ value.id_country }}" selected>{{ value.country_name }}</option>
                    {% else %}
                        <option value="{{ value.id_country }}">{{ value.country_name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Выберите Телеканал</label>
            <select  name="Dorama[channel]" class="form-control">
                {% for value in channel %}
                    {% if value.id_channel == data.id_channel %}
                        <option value="{{ value.id_channel }}" selected>{{ value.сhannel_name }}</option>
                    {% else %}
                        <option value="{{ value.id_channel }}">{{ value.сhannel_name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Введите Количество Серий</label>
            <input type="number" name="Dorama[series-count]" class="form-control" placeholder="Количество серий" value="{{ data.series_count }}" required >
        </div>
        <div class="form-group">
            <label>Введите Продолжительность Серии</label>
            <input type="number" name="Dorama[series-duration]" class="form-control" placeholder="Продолжительность серии" value="{{ data.series_duration }}" required >
        </div>
        <div class="form-group">
            <label>Выберите Статус</label>
            <select  name="Dorama[status]" class="form-control">
                {% for value in statust %}
                    {% if value.id_status == data.id_status %}
                        <option value="{{ value.id_status }}" selected>{{ value.status_name }}</option>
                    {% else %}
                        <option value="{{ value.id_status }}">{{ value.status_name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Выберите Режисёра</label>
            <select  name="Dorama[producer]" class="form-control">
                {% for value in producer %}
                    {% if value.id_producer == data.id_producer %}
                        <option value="{{ value.id_producer }}" selected>{{ value.producer_name }}</option>
                    {% else %}
                        <option value="{{ value.id_producer }}">{{ value.producer_name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Выберите Жанр</label>
            <select  name="Dorama[genre]" class="form-control">
                {% for value in genre %}
                    {% if value.id_genre == data.id_genre %}
                        <option value="{{ value.id_genre }}" selected>{{ value.genre_name }}</option>
                    {% else %}
                        <option value="{{ value.id_genre }}">{{ value.genre_name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>Введите Год Выпуска</label>
            <input type="number" name="Dorama[issue-year]" class="form-control" placeholder="Год выпуска" value="{{ data.issue_year }}" required >
        </div>
        <input type="hidden" name="Dorama[id]" value="{{ id }}">
        <button type="submit" class="btn btn-dorama mb-5">Обновить Дораму</button>
    </form>
</div>
{% include('footer.twig') %}